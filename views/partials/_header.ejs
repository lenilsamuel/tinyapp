<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (!username) { %>
          <div class="contentcontainer med left" style="margin-left: 863px;">
            <form action="/login" style="text-align: right;" method="POST">
              <input type="text" placeholder="Username" name="username">
              <button type="submit" class="btn btn-outline-dark btn-sm" style = "height: 35px ; margin-top: auto; margin-bottom: auto;">
                Login
              </button>
            </form>
          </div>
        <% } else { %>
          <div class="contentcontainer med left" style="margin-left: 850px;">
            <form action="/logout" method="POST" class = "d-flex justify-content-center">
              <h6>Logged In As: <%= username + '!' %></h6>
              <!-- <input type="text" placeholder="Username" name="username"> -->
              <button type="submit" class="btn btn-outline-dark btn-sm" style = "height: 35px ; margin-top: auto; margin-bottom: auto;">
                Logout
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
  </nav>
</header>
